@page
@model SparkAuto.Pages.ServiceTypes.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info font-weight-bold">Edit service type</h2>
<br />

<form method="post">
    <div class="border backgroundWhite">
        <input type="hidden" asp-for="ServiceType.Id">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Name" disabled class="form-control" />
            </div>
            <span asp-validation-for="ServiceType.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Price" disabled class="form-control" />
            </div>
            <span asp-validation-for="ServiceType.Price" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <a asp-page="Edit" asp-route-id="@Model.ServiceType.Id" class="btn btn-info form-control">Edit</a>
                    </div>
                    <div class="col-6">
                        <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
